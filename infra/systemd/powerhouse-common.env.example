# Shared configuration for Power-House nodes
PH_BROADCAST_INTERVAL=5000
PH_QUORUM=2
PH_CHECKPOINT_INTERVAL=60
# PH_POLICY=/etc/jrocnet/governance.json
# PH_POLICY_ALLOWLIST=/etc/jrocnet/allow.json

PH_METRICS_ADDR=:9100
PH_METRICS_URL=http://127.0.0.1:9100/metrics

PH_BLOB_LISTEN=:8181
PH_BLOB_POLICY=/etc/jrocnet/blob_policy.json
PH_BLOB_AUTH_TOKEN=replace_me
PH_BLOB_MAX_CONCURRENCY=128
PH_BLOB_REQUEST_TIMEOUT_MS=10000
PH_MAX_BLOB_BYTES=5242880
PH_BLOB_RETENTION_DAYS=30

PH_HEALTH_URL=http://127.0.0.1:8181/healthz
PH_METRICS_STALL_MINUTES=20

PH_ALERT_EMAIL=support@mfenx.com
PH_ALERT_SUBJECT_PREFIX=[power_house]
PH_ALERT_FROM=support@mfenx.com
PH_ALERT_SCRIPT=/usr/local/lib/powerhouse/alert.sh

PH_BACKUP_DIR=/var/backups/jrocnet
PH_BACKUP_RETENTION_DAYS=14
PH_LOG_EXPORT_DIR=/var/log/powerhouse
PH_LOG_EXPORT_RETENTION_DAYS=7
PH_LOG_SHIP_HOST=
PH_LOG_SHIP_USER=root
PH_LOG_SHIP_PATH=/var/log/powerhouse/remote
PH_LOG_SHIP_PORT=22
PH_LOG_SHIP_KEY=/root/.ssh/powerhouse_ship_ed25519
PH_METRICS_OUT_DIR=/var/log/powerhouse
PH_RELEASE_ROOT=/opt/jrocnet/releases
